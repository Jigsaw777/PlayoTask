<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:orientation="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingTop="8dp"
    android:paddingBottom="4dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Dummy Text"
        android:textSize="20sp"
        android:textColor="#0000ff"
        android:id="@+id/tv_title"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/tv_author_text"
        android:text="Authored By : "
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        android:textColor="#000"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintLeft_toRightOf="@id/tv_author_text"
        android:layout_marginTop="4dp"
        android:textColor="#000"
        android:textSize="16sp"
        android:text="dummy_text"
        android:id="@+id/tv_author"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="start"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_author_text"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/tv_comments_text"
        android:text="Comments : "
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        android:textColor="#000"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_author"
        app:layout_constraintLeft_toRightOf="@id/tv_comments_text"
        android:layout_marginTop="4dp"
        android:textColor="#000"
        android:textSize="16sp"
        android:text="dummy_text"
        android:id="@+id/tv_comments"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="start"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_comments_text"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/tv_points_text"
        android:text="Points : "
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        android:textColor="#000"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_comments_text"
        app:layout_constraintLeft_toRightOf="@id/tv_points_text"
        android:layout_marginTop="4dp"
        android:textColor="#000"
        android:textSize="16sp"
        android:text="dummy_text"
        android:id="@+id/tv_points"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="start"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_points_text"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/tv_date_text"
        android:text="Created at : "
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        android:textColor="#000"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_points_text"
        app:layout_constraintLeft_toRightOf="@id/tv_date_text"
        android:layout_marginTop="4dp"
        android:textColor="#000"
        android:textSize="16sp"
        android:text="dummy_text"
        android:id="@+id/tv_date"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="start"/>

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_date_text"
        android:layout_marginTop="12dp"
        android:id="@+id/tags_layout"
        orientation="horizontal"/>

</androidx.constraintlayout.widget.ConstraintLayout>